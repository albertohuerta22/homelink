<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>homelink.log</file>
        <encoder>
            <!-- Include timestamp, message, and response body -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n%ex</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="FILE" />
    </root>
</configuration>
